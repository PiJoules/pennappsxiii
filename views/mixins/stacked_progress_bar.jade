mixin stacked_progress_bar(category_data, expense_data, bar_colors)
	- var color_index = 0
	.progress(id="main-progress-bar")
		each obj in category_data
			if obj && obj.percentOfAll > 0
				.progress-bar(style='width: #{obj.percentOfAll}%; background-color: #{bar_colors[color_index]}; padding-top: 10px; min-width: 2em', role='progress-bar', aria-valuenow='#{obj.percentOfAll}', aria-valuemin='0', aria-valuemax='100')
					| #{roundPercentage(obj.percentOfAll)}%
			- color_index += 1
	